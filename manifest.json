{
  "manifest_version": 3,
  "name": "Binance Signal Analyzer",
  "version": "1.0.0",
  "description": "Analyzes Binance charts using technical indicators and draws buy/sell signals on TradingView charts",
  "permissions": [
    "storage",
    "alarms"
  ],
  "host_permissions": [
    "https://api.binance.com/*",
    "https://www.binance.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.binance.com/*/trade/*",
        "https://www.binance.com/*/futures/*"
      ],
      "js": ["indicators.js", "overlay.js", "content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "options.html"
}

